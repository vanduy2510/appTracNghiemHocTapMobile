<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cam"
    android:orientation="vertical"
    
    android:weightSum="4"
    tools:context=".readyQuiz">
    <ImageView
        android:id="@+id/btnBack"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/trove"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Are you ready ?"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_gravity="center"></TextView>
<!--    <ImageView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_weight="2.5"-->
<!--        android:src="@drawable/earth"></ImageView>-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/img"
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/earth"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"></com.airbnb.lottie.LottieAnimationView>

    <LinearLayout
        android:id="@+id/btnStart"
        android:padding="5dp"
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:background="@drawable/shape"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:src="@drawable/play"></ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:textColor="@color/black"
            android:text="Let's Go"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"></TextView>
    </LinearLayout>

</LinearLayout>